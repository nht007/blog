<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <br />
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows => 10, :cols => 50 %>
  </div>
  <div class="actions">
    <%= f.submit :value => "Post Comment" %>
  </div>
<% end %>